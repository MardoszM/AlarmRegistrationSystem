@model Models.CreateUserModel
@{
    Layout = "_Layout";
}

<form asp-action="CreateAccount" asp-controller="Account" method="post">
    <div class="row">
        <div class="col s12">
            <div class="row">
                <div class="input-field col l4 m6 s9 push-l1 push-m1">
                    <i class="fas fa-user-circle prefix"></i>
                    <input id="UserInput" asp-for="UserName" type="text" class="validate" />
                    <label id="UserLabel" asp-for="UserName">Nazwa Użytkownika</label>
                    <span asp-validation-for="UserName" class="helper-text left-align red-text darken-1"></span>
                </div>
                <div class="input-field col l1 m2 s3 push-l1 push-m1 left-align">
                    <a id="UserBtn" class="btn waves-effect waves-light cyan darken-4"><i class="fas fa-dice"></i></a>
                </div>
            </div>
            <div class="row">
                <div class="input-field col l4 m6 s9 push-l1 push-m1">
                    <i class="fas fa-key prefix"></i>
                    <input id="PasswordInput" asp-for="Password" type="password" class="validate" />
                    <label id="PasswordLabel" asp-for="Password">Hasło</label>
                    <span asp-validation-for="Password" class="helper-text left-align red-text darken-1"></span>
                </div>
                <div class="input-field col l1 m2 s3 push-l1 push-m1 left-align">
                    <a id="PasswordBtn" class="btn waves-effect waves-light cyan darken-4"><i class="fas fa-dice"></i></a>
                </div>
            </div>
            <div class="row">
                <div class="input-field col l4 m6 s9 push-l1 push-m1 left-align">
                    <i class="fas fa-id-card prefix"></i>
                    <select asp-for="Role">
                        <option value="employe" selected>Pracownik</option>
                        <option value="Mechanic">Mechanik</option>
                        <option value="Administrator">Administrator</option>
                    </select>
                    <label>Typ Konta</label>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col l5 m7 s9 right-align">
            <div>
                <a href="/Admin/Index" class="btn waves-effect waves-light orange darken-2">
                    Anuluj
                    <i class="fas fa-times"></i>
                </a>
                <button type="submit" class="btn waves-effect waves-light teal darken-1">Dodaj <i class="fas fa-paper-plane"></i></button>
            </div>
        </div>
    </div>
</form>


@section scripts{
    <script src="~/Scripts.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/src/jquery.validate.unobtrusive.js"></script>
    <script>
        $(document).ready(function () {
            $('select').formSelect();
        });
        $(document).on('click', '#PasswordBtn', function () {
            $url = '/Account/GenerateRandomPassword';
            func = function (result) {
                $('#PasswordInput').val(result).addClass('valid');
                $('#PasswordLabel').addClass('active');
            }
            AjaxAndFunc($url, func);
        })

    </script>
}





