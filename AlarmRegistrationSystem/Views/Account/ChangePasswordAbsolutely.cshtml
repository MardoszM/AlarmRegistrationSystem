@model Models.ViewModels.ChangePasswordViewModel
@{
    Layout = "_Layout";
}

<form id="Form" asp-action="ChangePasswordAbsolutely" asp-controller="Account" method="post">
    <div class="row">
        <div class="col s12">
            <div class="row">
                <div class="input-field col l4 m6 s9 push-l1 push-m2">
                    <i class="fas fa-user prefix"></i>
                    <input asp-for="SpecifiedUserName" readonly="readonly" type="text" />
                    <label asp-for="SpecifiedUserName">Uzytkownik</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col l4 m6 s9 push-l1 push-m2">
                    <i class="fas fa-lock prefix"></i>
                    <input asp-for="NewPassword" type="password" class="validate" />
                    <label asp-for="NewPassword">Nowe Haslo</label>
                    <span asp-validation-for="NewPassword" class="helper-text left-align red-text darken-1"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col l5 m7 s9 right-align">
            <div>
                <a asp-action="ListUsers" asp-controller="Account" class="btn waves-effect waves-light orange darken-2">
                    Anuluj
                    <i class="fas fa-times"></i>
                </a>
                <button type="submit" class="btn waves-effect waves-light teal darken-1">Dodaj <i class="fas fa-paper-plane"></i></button>
            </div>
        </div>
    </div>
</form>


@section scripts{
    <script src="~/Scripts.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/src/jquery.validate.unobtrusive.js"></script>
    <script>
    </script>
}