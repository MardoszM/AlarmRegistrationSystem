@model Models.ViewModels.LoginViewModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/materialize/dist/css/materialize.css" />
    <link rel="stylesheet" href="~/lib/Font-Awesome/css/all.css" />
    <link rel="stylesheet" href="~/Style.css" />
</head>
<body>
    <div class="row log-form">
        <div class="col s10 m6 l4 log-justify">
            <div class="row">
                <h3 class="teal-text">Panel Logowania</h3>
            </div>
            <form asp-action="Login" asp-controller="Account">
                <div class="row">
                <div asp-validation-summary="All" class="red-text darken-2"></div>
                </div>
                <div class="row">
                    <div class="input-field" aria-invalid="true">
                        <i class="fas fa-user prefix"></i>
                        <input asp-for="LoginName" type="text" class="validate" />
                        <label asp-for="LoginName">Nazwa Uzytkownika/email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field" aria-invalid="true">
                        <i class="fas fa-key prefix"></i>
                        <input asp-for="Password" type="password" class="validate" />
                        <label asp-for="Password">Hasło</label>
                    </div>
                </div>
                <div class="row">
                    <p class="col s6">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" type="checkbox" />
                            <span class="teal-text">Zapamietaj mnie</span>
                        </label>
                    </p>
                    <p class="col s6 right-align">
                        <a href="#" class="btn waves-effect waves-light orange">Zapomnialem hasla</a>
                    </p>
                </div>
                <div class="row right-align">
                    <button type="submit" class="btn waves-effect waves-light teal darken-1">Zaloguj</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

<script src="~/lib/materialize/dist/js/materialize.js" type="text/javascript"></script>
